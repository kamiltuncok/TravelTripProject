@using TravelTripProject.Models.Entity
@model List<Blog>

@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:300px; height:185px;" />
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">@x.Date.ToString("dd.MM.yyyy")</span>
            <p>@x.Explanation.Substring(0, x.Explanation.Substring(0, 40).LastIndexOf(""))<b>...</b></p>
            <p><a href="/Blog/BlogDetail/@x.Id"><span class="read">Devamını Oku >></span></a></p>
     </div>
        </div>
 }
