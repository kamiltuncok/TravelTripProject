@using TravelTripProject.Models.Entity
@model List<CommentStatement>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th></th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.Id</td>
        <td>@x.UserName</td>
        <td>@x.Email</td>
        <td>@x.Comment</td>
        <td>@x.blog.Title</td>
        <td>
            <a href="/Admin/DeleteComment/@x.Id" class="btn btn-danger">Sil</a>
            <a href="/Admin/GetCommentById/@x.Id" class="btn btn-warning">Güncelle</a>
        </td>
    </tr>
    }
</table>

