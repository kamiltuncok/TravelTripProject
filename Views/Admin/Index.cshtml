@using TravelTripProject.Models.Entity
@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.Id</td>
        <td>@x.Title</td>
        <td><a href="/Admin/Delete/@x.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/GetBlogById/@x.Id" class="btn btn-warning">Güncelle</a></td>
        <td><a href="#" class="btn btn-default">Detaylar</a></td>
    </tr>
    }
</table>
<a href="/Admin/Add/" class="btn btn-primary">Blog Ekle</a>

